<UserControl x:Class="StarlightStageProducer.DeckContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StarlightStageProducer"
			 Width="576" Height="100">
	<Grid>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="80">
			<local:IdolDeckView x:Name="image2"/>
			<local:IdolDeckView x:Name="image0"/>
			<local:IdolDeckView x:Name="imageLeader"/>
			<local:IdolDeckView x:Name="image1"/>
			<local:IdolDeckView x:Name="image3"/>
			<local:IdolDeckView x:Name="imageGuest" Margin="50,6,0,6"/>
		</StackPanel>
		<TextBlock x:Name="textAppeal" FontFamily="Century Gothic" FontWeight="Bold"
				   FontSize="16" Margin="40,5"
				   HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
	</Grid>
</UserControl>
